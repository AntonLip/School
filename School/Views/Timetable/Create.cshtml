@model School.Models.DbModels.Timetable

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Timetable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                @Html.DropDownList("DisciplineId", ViewBag.Disciplines as SelectList)
                <span asp-validation-for="DisciplineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeId" class="control-label"></label>
                @*<input asp-for="GradeId" class="form-control" />*@
                 @Html.DropDownList("GradeId", ViewBag.Grades as SelectList)
                <span asp-validation-for="GradeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                
                <select asp-for="DayOfWeek" 
                    class="form-control" 
                    asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                <option>Выберите день недели ...</option>
            </select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonNumber" class="control-label"></label>
                <input asp-for="LessonNumber" class="form-control" />
                <span asp-validation-for="LessonNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить занятие" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
